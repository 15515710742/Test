<!--pages/contact/contact.wxml-->
<view class="divider"></view>
<view class="cell">
    <form bindsubmit="submitHandle">
        <view class="cell-item arrow">
            <text>添加用户信息</text>
        </view>
        <view class="cell-item">
            <input type="text" name="uname" placeholder="请输入用户名"></input>
        </view>
        <view class="cell-item">
            <input type="text" name="upwd" placeholder="请输入密码"></input>
        </view>
        <view class="cell-item">
            <button formType="submit">注册</button>
        </view>
    </form>
</view>
<view class="divider"></view>
<view class="cell">
    <view class="cell-item">
        <text>表单的其他组件</text>
    </view>
     <view class="cell-item">
        <checkbox-group>
            <checkbox checked>红烧肉</checkbox>
            <checkbox>鱼香肉丝</checkbox>           
        </checkbox-group>
    </view>
    <view class="cell-item">
        <radio-group>
            <radio name="r" value="male" checked>男</radio>
            <radio name="r" value="female">女</radio>            
        </radio-group>
    </view>
    <view class="cell-item">
        <switch name="s" checked></switch>
        <switch name="s"></switch>       
    </view>
</view>
