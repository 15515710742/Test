/* pages/shoplist/shoplist.wxss */

.shop{
    padding: 20rpx;
    border-bottom:1rpx solid #ddd;
    display: flex;
    position: relative;/*让星星绝对定位*/
}
.shop-img{
    width:180rpx;
    height:180rpx;
    margin-right:20rpx;
}
.shop-info{
    width:520rpx;
    font-size: 14px;
    color: #666;
    display: flex;
    flex-direction: column;
    line-height: 1.6;
}
.shop-title{
    font-size:16px;
    color:#333;
    width:350rpx;

}
/*商品的打分*/
.shop-star{
    position: absolute;
    right: 20rpx;
    top:20rpx;
}








