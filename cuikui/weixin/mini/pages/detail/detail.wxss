/**/
/*图片有默认值*/
.slider,
.slider image,
.slider swiper{
  width: 100%;
  height:390rpx;
}
/*s商品标题*/
.shop-title{
    font-size:20px;
    color:#333;
}
.priceInfo .oldprice{
    color:#ccc;
    text-decoration: line-through;
    margin-right:20rpx;
}
.priceInfo .newprice{
    color:red;
    font-size: 16px;
}
.tui-number-group{
    display: table;
    table-layout: fixed;
    width: 300rpx;
    text-align: center;
    border-radius: 6rpx;
    overflow: hidden;
    border:1rpx solid #bbb;
}

.tui-number-cell{
    display: table-cell;
    line-height: 1.7;
    border-radius: 0;
}
button::after{
    border-bottom:none;
    border-top:none;
    border-radius: 0;
}
.addCart,
.addOrder{
    background: #fc6;
    font-size:14px;
}
